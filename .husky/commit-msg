#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format
# Format: type(scope): subject
# Example: feat(auth): add login endpoint
# Types: feat, fix, docs, style, refactor, test, chore

commit_msg=$(cat "$1")

# Check if commit message follows conventional commits format
if ! echo "$commit_msg" | grep -qE "^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,}$"; then
  echo "❌ Invalid commit message format!"
  echo ""
  echo "Commit message must follow the format: type(scope): subject"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  echo ""
  echo "Examples:"
  echo "  feat(auth): add user registration endpoint"
  echo "  fix(products): resolve pagination bug"
  echo "  docs(readme): update API documentation"
  echo ""
  exit 1
fi

echo "✅ Commit message format is valid!"
